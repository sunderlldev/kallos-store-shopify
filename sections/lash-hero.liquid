<section class="lp-hero-section" id="lp-{{ section.id }}">
  <div class="lp-container">
    <div class="lp-grid">
      <div class="lp-col-image">
        {% if section.settings.top_title != blank %}
          <div class="lp-badge lp-badge--mobile">
            {{ section.settings.top_title }}
          </div>
        {% endif %}

        {% if section.settings.floating_image != blank %}
          <div class="lp-image-wrapper">
            {{
              section.settings.floating_image
              | image_url: width: 800
              | image_tag: class: 'lp-main-img-animate', loading: 'lazy', alt: section.settings.title
            }}
          </div>
        {% endif %}
      </div>

      <div class="lp-col-text">
        {% if section.settings.top_title != blank %}
          <div class="lp-badge lp-badge--desktop">
            {{ section.settings.top_title }}
          </div>
        {% endif %}

        <h2 class="lp-title">{{ section.settings.title }}</h2>

        <div class="lp-desc">
          {{ section.settings.description }}
        </div>

        <div class="lp-features-list">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <div class="lp-feature-item" {{ block.shopify_attributes }}>
                <span class="lp-icon-box">
                  {% if block.settings.custom_icon != blank %}
                    <img
                      src="{{ block.settings.custom_icon | image_url: width: 50 }}"
                      alt="Icon"
                      class="lp-feature-icon"
                    >
                  {% else %}
                    <span class="lp-dot" style="background-color: {{ section.settings.icon_color }};"></span>
                  {% endif %}
                </span>
                <div class="lp-feature-content">
                  {{ block.settings.text }}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>

        {% if section.settings.btn_label != blank %}
          <div class="lp-action">
            <a href="{{ section.settings.btn_link }}" class="lp-primary-btn">
              {{ section.settings.btn_label }}
              <svg width="20" height="20" viewBox="0 0 256 256">
                <path fill="currentColor" d="m224.49 136.49l-72 72a12 12 0 0 1-17-17L187 140H40a12 12 0 0 1 0-24h147l-51.49-51.52a12 12 0 0 1 17-17l72 72a12 12 0 0 1 0 17.03Z"/>
              </svg>
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  #lp-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding: 80px 20px;
    font-family: 'Poppins', sans-serif;
    overflow: hidden;
  }

  .lp-container { max-width: 1200px; margin: 0 auto; }
  .lp-grid { display: flex; flex-direction: column; gap: 40px; }

  .lp-col-image, .lp-col-text {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .lp-badge { font-size: 16px; color: #151515; letter-spacing: 1px; text-transform: uppercase; margin-bottom: 10px; }
  .lp-badge p { margin: 0; }
  .lp-badge--desktop { display: none; }

  .lp-title {
    font-size: clamp(34px, 5vw, 52px);
    font-weight: 700;
    margin: 0;
    color: #121212;
    line-height: 1.1;
  }

  .lp-desc { font-size: 18px; font-weight: 300; font-style: italic; color: #3D3D3D; line-height: 1.6; margin: 20px 0; max-width: 550px; }

  /* FIX IMAGEN: Namespace único para evitar conflictos con Wayra */
  .lp-main-img-animate {
    width: 450px;
    max-width: 100%;
    height: auto;
    object-fit: contain;
    display: block;
    animation: lpFloatEffect 4.5s ease-in-out infinite;
    filter: drop-shadow(0 20px 30px rgba(0,0,0,0.08));
  }

  @keyframes lpFloatEffect {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  .lp-features-list { display: flex; flex-direction: column; gap: 18px; margin: 30px 0; width: 100%; }

  .lp-feature-item { display: flex; align-items: center; gap: 15px; }

  .lp-icon-box { width: 28px; height: 28px; display: flex; align-items: center; justify-content: center; flex-shrink: 0; }

  .lp-feature-icon { width: 100%; height: 100%; object-fit: contain; display: block; }

  .lp-dot { width: 10px; height: 10px; border-radius: 50%; }

  .lp-feature-content, .lp-feature-content p {
    margin: 0; font-size: 17px; color: #121212; line-height: 1.4; text-align: left;
  }

  .lp-primary-btn {
    background: #1D1D1B;
    color: #fff;
    padding: 16px 45px;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 700;
    display: inline-flex;
    align-items: center;
    gap: 12px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0,0,0,0.15);
  }

  .lp-primary-btn:hover { background: #AC9651; transform: translateY(-3px); color: #fff; }

  /* Desktop Styles */
  @media screen and (min-width: 769px) {
    .lp-grid { flex-direction: row; align-items: center; justify-content: space-between; gap: 80px; }
    .lp-col-image { width: 50%; }
    .lp-col-text { width: 50%; align-items: flex-start; text-align: left; }
    .lp-badge--mobile { display: none; }
    .lp-badge--desktop { display: block; }
    .lp-action { width: 100%; display: flex; justify-content: flex-start; }
  }

  @media (max-width: 768px) {
    .lp-main-img-animate { max-width: 320px; }
    #lp-{{ section.id }} { padding: 50px 20px; }
    .lp-action { width: 100%; display: flex; justify-content: center; }
  }
</style>

{% schema %}
{
  "name": "Kallos · Lash+ Hero",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Color de Fondo", "default": "#F8F5F4" },
    { "type": "color", "id": "icon_color", "label": "Color de Iconos/Puntos", "default": "#AC9651" },
    { "type": "image_picker", "id": "floating_image", "label": "Imagen Principal" },
    {
      "type": "richtext",
      "id": "top_title",
      "label": "Título Superior",
      "default": "<p><strong>¡NUEVO LANZAMIENTO!</strong></p>"
    },
    { "type": "text", "id": "title", "label": "Título Principal", "default": "LASH+ by Kallos" },
    {
      "type": "richtext",
      "id": "description",
      "label": "Descripción",
      "default": "<p>El serum de pestañas que transforma tu mirada con cuidado y ciencia.</p>"
    },
    { "type": "text", "id": "btn_label", "label": "Texto Botón", "default": "Ver más sobre LASH+" },
    { "type": "url", "id": "btn_link", "label": "Link Botón" }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Característica",
      "settings": [
        { "type": "image_picker", "id": "custom_icon", "label": "Icono Personalizado" },
        { "type": "richtext", "id": "text", "label": "Texto" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Kallos · Lash+ Hero",
      "blocks": [
        { "type": "feature", "settings": { "text": "<p>Ayuda a fortalecer y alargar las pestañas</p>" } },
        { "type": "feature", "settings": { "text": "<p>Mejora visiblemente su apariencia</p>" } }
      ]
    }
  ]
}
{% endschema %}
