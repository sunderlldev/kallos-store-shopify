<section class="lash-custom-hero" id="lash-{{ section.id }}">
  <div class="lash-container">
    <div class="lash-grid-wrapper">
      <div class="lash-image-column">
        {% if section.settings.top_title != blank %}
          <div class="lash-badge lash-badge--mobile">
            {{ section.settings.top_title }}
          </div>
        {% endif %}

        {% if section.settings.floating_image != blank %}
          <div class="lash-floating-wrapper">
            <img
              src="{{ section.settings.floating_image | image_url: width: 800 }}"
              alt="{{ section.settings.title }}"
              class="lash-img-animate"
              loading="lazy"
            >
          </div>
        {% endif %}
      </div>

      <div class="lash-text-column">
        {% if section.settings.top_title != blank %}
          <div class="lash-badge lash-badge--desktop">
            {{ section.settings.top_title }}
          </div>
        {% endif %}

        <h2 class="lash-main-title">{{ section.settings.title }}</h2>

        <div class="lash-description">
          {{ section.settings.description }}
        </div>

        <div class="lash-features">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <div class="feature-item" {{ block.shopify_attributes }}>
                <span class="icon-wrapper">
                  {% if block.settings.custom_icon != blank %}
                    <img
                      src="{{ block.settings.custom_icon | image_url: width: 50 }}"
                      alt="Icon"
                      class="custom-icon-img"
                    >
                  {% else %}
                    <span class="dot-placeholder" style="background-color: {{ section.settings.icon_color }};"></span>
                  {% endif %}
                </span>
                <div class="feature-text">
                  {{ block.settings.text }}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>

        {% if section.settings.btn_label != blank %}
          <div class="lash-btn-wrapper">
            <a href="{{ section.settings.btn_link }}" class="lash-btn">
              {{ section.settings.btn_label }}
              <svg width="20" height="20" viewBox="0 0 256 256">
                <path fill="currentColor" d="m224.49 136.49l-72 72a12 12 0 0 1-17-17L187 140H40a12 12 0 0 1 0-24h147l-51.49-51.52a12 12 0 0 1 17-17l72 72a12 12 0 0 1 0 17.03Z"/>
              </svg>
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  #lash-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding: 80px 20px;
    font-family: var(--font-body-family);
    overflow: hidden;
  }

  #lash-{{ section.id }} .feature-text p {
  font-family: var(--font-body-family);
  }

  .lash-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .lash-grid-wrapper {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .lash-image-column,
  .lash-text-column {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .lash-badge {
    font-family: var(--font-body-family);
    font-size: 16px;
    color: #151515;
    letter-spacing: 1px;
    text-transform: uppercase;
    margin-bottom: 10px;
  }

  .lash-badge p {
    margin: 0;
  }

  .lash-badge--desktop {
    display: none;
  }

  .lash-main-title {
    font-family: var(--font-heading-family);
    font-size: clamp(34px, 5vw, 52px);
    font-weight: 600;
    margin: 0;
    color: #121212;
    line-height: 1.1;
  }

  .lash-description {
    font-family: var(--font-body-family);
    font-size: 18px;
    font-weight: 300;
    font-style: italic;
    color: #3D3D3D;
    line-height: 1.6;
    margin: 20px 0;
    max-width: 550px;
  }

  .lash-description strong {
    font-weight: 700;
  }

  .lash-img-animate {
    width: 400px;
    max-width: 100%;
    display: block;
    margin: 0 auto;
    will-change: transform;
    animation: lashFloat 4s ease-in-out infinite;
    filter: drop-shadow(0 20px 30px rgba(0,0,0,0.08));
  }

  @keyframes lashFloat {
    0%, 100% {
      transform: translate3d(0, 0, 0);
    }
    50% {
      transform: translate3d(0, -25px, 0);
    }
  }

  .lash-features {
    display: flex;
    flex-direction: column;
    gap: 15px;
    margin: 30px 0;
    width: 100%;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .icon-wrapper {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .custom-icon-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .dot-placeholder {
    width: 8px;
    height: 8px;
    border-radius: 50%;
  }

  .feature-text,
  .feature-text p {
    font-family: var(--font-body-family);
    margin: 0;
    font-size: 16px;
    color: #121212;
    line-height: 1.4;
    text-align: left;
  }

  .lash-btn-wrapper {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .lash-btn {
    font-family: var(--font-body-family);
    background: #1D1D1B;
    color: #fff;
    padding: 20px 40px; 
    font-size: 22px;    
    text-decoration: none;
    border-radius: 4px;
    font-weight: bold;
    display: inline-flex;
    align-items: center;
    gap: 12px;
    transition: all var(--hover-transition-duration) var(--hover-transition-timing);
    box-shadow: 0 4px 15px rgba(0,0,0,0.15);
  }

  .lash-btn:hover {
    background: #AC9651;
    transform: translateY(calc(-1 * var(--hover-lift-amount)));
  }

  @media screen and (min-width: 769px) {
    .lash-grid-wrapper {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      gap: 60px;
    }

    .lash-image-column {
      width: 50%;
      align-items: center;
    }

    .lash-text-column {
      width: 50%;
      align-items: flex-start;
      text-align: left;
    }

    .lash-description {
      margin: 20px 0;
      max-width: 100%;
    }

    .lash-btn-wrapper {
      justify-content: flex-start;
    }

    .lash-badge--mobile {
      display: none;
    }

    .lash-badge--desktop {
      display: block;
    }
  }

  @media (max-width: 768px) {
    .lash-img-animate {
      max-width: 300px;
    }
    
    .lash-btn {
      font-size: 18px;
      padding: 15px 30px;
      width: 100%;
      justify-content: center;
    }
  }
</style>

{% schema %}
{
  "name": "Lash Plus Hero",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Color de Fondo", "default": "#F8F5F4" },
    { "type": "color", "id": "icon_color", "label": "Color de Iconos/Puntos", "default": "#AC9651" },
    { "type": "image_picker", "id": "floating_image", "label": "Imagen Principal" },
    {
      "type": "richtext",
      "id": "top_title",
      "label": "Título Superior",
      "default": "<p><strong>¡NUEVO LANZAMIENTO!</strong></p>"
    },
    { "type": "text", "id": "title", "label": "Título Principal", "default": "LASH+ by Kallos" },
    {
      "type": "richtext",
      "id": "description",
      "label": "Descripción",
      "default": "<p>El serum de pestañas que transforma tu mirada con cuidado y ciencia.</p>"
    },
    { "type": "text", "id": "btn_label", "label": "Texto Botón", "default": "Ver más sobre LASH+" },
    { "type": "url", "id": "btn_link", "label": "Link Botón" }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Característica",
      "limit": 5,
      "settings": [
        { "type": "image_picker", "id": "custom_icon", "label": "Icono Personalizado" },
        { "type": "richtext", "id": "text", "label": "Texto Enriquecido" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Kallos · Lash+ Hero",
      "blocks": [
        { "type": "feature", "settings": { "text": "<p>Ayuda a fortalecer y alargar las pestañas</p>" } },
        { "type": "feature", "settings": { "text": "<p>Mejora visiblemente su apariencia</p>" } },
        { "type": "feature", "settings": { "text": "<p>Fórmula suave para uso diario</p>" } }
      ]
    }
  ]
}
{% endschema %}
