{%- liquid
  assign slider_id = 'slider-' | append: section.id
-%}

<div
  class="banner-wrapper-{{ section.id }}"
  style="--desktop-height: {{ section.settings.desktop_height }}px; --mobile-height: {{ section.settings.mobile_height }}px;"
>
  <div class="banner-container">
    <div class="slider-track" id="{{ slider_id }}">
      {% for block in section.blocks %}
        <div class="slide-item" {{ block.shopify_attributes }}>
          {% if block.settings.image_desktop != blank %}
            <img
              src="{{ block.settings.image_desktop | image_url: width: 2000 }}"
              class="img-desktop"
              alt="{{ block.settings.image_desktop.alt }}"
              loading="lazy"
            >
          {% endif %}

          {% if block.settings.image_mobile != blank %}
            <img
              src="{{ block.settings.image_mobile | image_url: width: 800 }}"
              class="img-mobile"
              alt="{{ block.settings.image_mobile.alt }}"
              loading="lazy"
            >
          {% else %}
            {% comment %} Fallback si no hay imagen móvil {% endcomment %}
            <img src="{{ block.settings.image_desktop | image_url: width: 800 }}" class="img-mobile" alt="Slide">
          {% endif %}
        </div>
      {% endfor %}
    </div>

    {% if section.blocks.size > 1 %}
      <button class="slider-arrow prev" aria-label="Anterior">‹</button>
      <button class="slider-arrow next" aria-label="Siguiente">›</button>
    {% endif %}
  </div>
</div>

<style>
  .banner-wrapper-{{ section.id }} {
    width: 100%;
    overflow: hidden;
    position: relative;
  }
  .banner-container {
    position: relative;
    width: 100%;
    height: var(--desktop-height);
  }
  .slider-track {
    display: flex;
    transition: transform 0.5s ease-in-out;
    height: 100%;
  }
  .slide-item {
    min-width: 100%;
    height: 100%;
    flex-shrink: 0;
  }
  .slide-item img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Esto asegura que la imagen llene el alto definido */
    display: block;
  }

  .img-mobile { display: none; }
  .img-desktop { display: block; }

  .slider-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255,255,255,0.8);
    border: none;
    width: 45px;
    height: 45px;
    border-radius: 50%;
    cursor: pointer;
    z-index: 2;
    font-size: 24px;
    transition: 0.3s;
  }
  .slider-arrow:hover { background: #fff; scale: 1.1; }
  .prev { left: 20px; }
  .next { right: 20px; }

  @media (max-width: 767px) {
    .banner-container { height: var(--mobile-height); }
    .img-desktop { display: none; }
    .img-mobile { display: block; }
    .slider-arrow { width: 35px; height: 35px; }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const track = document.getElementById('{{ slider_id }}');
    const slides = track.querySelectorAll('.slide-item');
    const nextBtn = track.parentElement.querySelector('.next');
    const prevBtn = track.parentElement.querySelector('.prev');

    if (!track || slides.length <= 1) return;

    let index = 0;

    function move(direction) {
      index = (index + direction + slides.length) % slides.length;
      track.style.transform = `translateX(-${index * 100}%)`;
    }

    nextBtn.addEventListener('click', () => move(1));
    prevBtn.addEventListener('click', () => move(-1));

    // Auto-play opcional
    setInterval(() => move(1), 6000);
  });
</script>

{% schema %}
{
  "name": "Slider Responsive Pro",
  "settings": [
    {
      "type": "range",
      "id": "desktop_height",
      "min": 300,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Altura Desktop",
      "default": 500
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 200,
      "max": 600,
      "step": 10,
      "unit": "px",
      "label": "Altura Móvil",
      "default": 400
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Imagen",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Imagen Escritorio"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Imagen Móvil (Opcional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Kallos · Custom Slider"
    }
  ]
}
{% endschema %}
