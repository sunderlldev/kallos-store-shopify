<section class="kallos-hero" id="kallos-hero-{{ section.id }}">
  <div class="kallos-hero-inner">
    <div class="hero-text">
      <div class="social-proof">
        ⭐⭐⭐⭐⭐
        <span class="clients">
          +{{ section.settings.client_count }}
          {{ section.settings.client_text }}
        </span>
      </div>

      <div class="hero-title">
        {{ section.settings.title_rich }}
        <span class="typewriter">
          <span>cejas.</span>
          <span>barba.</span>
          <span>cabello.</span>
        </span>
      </div>

      <div class="hero-desc">
        {{ section.settings.description_rich }}
      </div>
    </div>

    <div class="hero-media">
      {% if section.settings.img_main %}
        <img
          src="{{ section.settings.img_main | image_url: width: 600 }}"
          class="float-img main"
        >
      {% endif %}

      {% if section.settings.img_secondary %}
        <img
          src="{{ section.settings.img_secondary | image_url: width: 400 }}"
          class="float-img secondary"
        >
      {% endif %}
    </div>
  </div>
</section>

<style>
  #kallos-hero-{{ section.id }} {
    background: {{ section.settings.bg_color }};
    color: #fff;
    padding: 80px 20px;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    #kallos-hero-{{ section.id }} {
      background: linear-gradient(
        0deg,
        {{ section.settings.mobile_gradient }} 0%,
        {{ section.settings.bg_color }} 100%
      );
    }
  }

  .kallos-hero-inner {
    max-width: 1200px;
    margin: auto;
    display: flex;
    align-items: center;
    gap: 60px;
  }

  .hero-text {
    width: 50%;
  }

  .hero-media {
    width: 50%;
    position: relative;
    height: 420px;
  }

  .float-img {
    position: absolute;
    animation: float 6s ease-in-out infinite;
  }

  .float-img.main {
    width: 70%;
    z-index: 2;
  }

  .float-img.secondary {
    width: 40%;
    right: 0;
    top: 20%;
    animation-delay: -3s;
  }

  @keyframes float {
    0%,100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
  }

  .social-proof {
    font-weight: 600;
    margin-bottom: 10px;
  }

  .hero-title {
    font-size: clamp(32px, 5vw, 48px);
    font-weight: 700;
    line-height: 1.1;
  }

  .typewriter {
    display: inline-block;
    position: relative;
    height: 1.2em;
    overflow: hidden;
    vertical-align: bottom;
    color: {{ section.settings.accent_color }};
  }

  .typewriter span {
    position: absolute;
    opacity: 0;
    animation: rotateWords 9s infinite steps(1);
  }

  .typewriter span:nth-child(1) { animation-delay: 0s; }
  .typewriter span:nth-child(2) { animation-delay: 3s; }
  .typewriter span:nth-child(3) { animation-delay: 6s; }

  @keyframes rotateWords {
    0% { opacity: 0; }
    10% { opacity: 1; }
    30% { opacity: 1; }
    40% { opacity: 0; }
    100% { opacity: 0; }
  }

  .hero-desc {
    margin-top: 20px;
    font-size: 18px;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .kallos-hero-inner {
      flex-direction: column;
      text-align: center;
    }

    .hero-text,
    .hero-media {
      width: 100%;
    }

    .hero-media {
      height: auto;
      margin-top: 40px;
    }

    .float-img {
      position: relative;
    }
  }
</style>

{% schema %}
{
  "name": "Kallos Hero",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Color fondo", "default": "#000000" },
    { "type": "color", "id": "mobile_gradient", "label": "Gradiente Mobile", "default": "#AC9651" },
    { "type": "color", "id": "accent_color", "label": "Color acento", "default": "#AC9651" },

    { "type": "image_picker", "id": "img_main", "label": "Imagen principal" },
    { "type": "image_picker", "id": "img_secondary", "label": "Imagen secundaria" },

    { "type": "text", "id": "client_count", "label": "Número clientes", "default": "10.000" },
    { "type": "text", "id": "client_text", "label": "Texto clientes", "default": "clientes Kallos" },

    {
      "type": "richtext",
      "id": "title_rich",
      "label": "Título",
      "default": "<p>Más confianza,<br>Más</p>"
    },
    {
      "type": "richtext",
      "id": "description_rich",
      "label": "Descripción",
      "default": "<p>Kallos. Líder en crecimiento capilar y cuidado de la piel, para potenciar tu mejor versión cada día.</p>"
    }
  ],
  "presets": [{ "name": "Kallos Hero" }]
}
{% endschema %}
