<section class="kallos-offer-section" id="kallos-offer-{{ section.id }}">
  <div class="kallos-offer-container">
    <div class="offer-left">
      <div class="offer-badge">
        {{ section.settings.badge_text }}
      </div>

      <div class="offer-title">
        {{ section.settings.title_rich }}
      </div>
    </div>

    <div class="offer-image">
      {% if section.settings.offer_img %}
        <img
          src="{{ section.settings.offer_img | image_url: width: 400 }}"
          alt="Kallos Offer"
        >
      {% endif %}
    </div>

    <div class="offer-right">
      <div class="offer-desc">
        {{ section.settings.desc_rich }}
      </div>

      {% if section.settings.btn_label != blank %}
        <a href="{{ section.settings.btn_link }}" class="offer-btn">
          {{ section.settings.btn_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  #kallos-offer-{{ section.id }} {
    background: #f9f9f9;
    padding: 60px 20px;
  }

  .kallos-offer-container {
    max-width: 1200px;
    margin: auto;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 40px;
  }

  .offer-badge {
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 1px;
    text-transform: uppercase;
    margin-bottom: 10px;
    color: #121212;
  }

  .offer-title {
    font-size: 22px;
    font-weight: 600;
    color: #121212;
  }

  .offer-image img {
    max-width: 220px;
    height: auto;
    display: block;
  }

  .offer-desc {
    font-size: 16px;
    line-height: 1.6;
    color: #333;
    margin-bottom: 20px;
  }

  .offer-desc strong {
    font-weight: 700;
  }

  .offer-btn {
    display: inline-block;
    background: #121212;
    color: #fff;
    padding: 14px 36px;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .offer-btn:hover {
    background: #AC9651;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .kallos-offer-container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .offer-left,
    .offer-right {
      order: unset;
    }

    .offer-image {
      order: -1;
      margin-bottom: 20px;
    }

    .offer-btn {
      width: 100%;
      text-align: center;
    }
  }
</style>

{% schema %}
{
  "name": "Kallos Hero Section",
  "settings": [
    {
      "type": "richtext",
      "id": "badge_text",
      "label": "Texto Superior",
      "default": "<p>TIEMPO LIMITADO</p>"
    },
    {
      "type": "richtext",
      "id": "title_rich",
      "label": "Título",
      "default": "<p><strong>Pack de prueba gratis</strong></p>"
    },
    {
      "type": "image_picker",
      "id": "offer_img",
      "label": "Imagen del producto"
    },
    {
      "type": "richtext",
      "id": "desc_rich",
      "label": "Descripción",
      "default": "<p>Te <strong>REGALAMOS 2 eBooks premium</strong><br>Glow Up integral & Guía para potenciar el crecimiento del vello.</p>"
    },
    {
      "type": "text",
      "id": "btn_label",
      "label": "Texto Botón",
      "default": "¡QUIERO EL MÍO!"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Link Botón"
    }
  ],
  "presets": [
    {
      "name": "Kallos · Oferta Inferior"
    }
  ]
}
{% endschema %}
