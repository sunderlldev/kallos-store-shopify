    {
      "type": "range",
      "id": "pad_y_mobile",
      "min": 20,
      "max": 100,
      "step": 5,
      "label": "Padding vertical mobile",
      "default": 40
    }
  ],
  "presets": [{ "name": "Kallos · Hero Oferta" }]
