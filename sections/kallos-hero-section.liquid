<section class="kallos-offer" id="kallos-offer-{{ section.id }}">
  {% if section.settings.marquee_text != blank %}
    <div class="kallos-offer__marquee">
      <div class="kallos-offer__marquee-track">
        <div class="kallos-offer__marquee-item">{{ section.settings.marquee_text }}</div>
        <div class="kallos-offer__marquee-item">{{ section.settings.marquee_text }}</div>
      </div>
    </div>
  {% endif %}

  <div class="kallos-offer__inner">
    <div class="kallos-offer__left">
      <div class="kallos-offer__badge">{{ section.settings.badge_text }}</div>
      <div class="kallos-offer__left-title">{{ section.settings.left_title }}</div>
    </div>

    <div class="kallos-offer__image">
      {% if section.settings.offer_img %}
        <img
          src="{{ section.settings.offer_img | image_url: width: 700 }}"
          alt="Oferta Kallos"
          loading="lazy"
        >
      {% endif %}
    </div>

    <div class="kallos-offer__right">
      <div class="kallos-offer__desc">{{ section.settings.desc_rich }}</div>

      {% if section.settings.btn_label != blank %}
        <a href="{{ section.settings.btn_link }}" class="kallos-offer__btn">
          {{ section.settings.btn_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  #kallos-offer-{{ section.id }}{
    background: {{ section.settings.bg_color }};
    padding: {{ section.settings.pad_y_desktop }}px 20px;
  }

  .kallos-offer__inner{
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    display:grid;
    grid-template-columns: 1fr auto 1fr;
    align-items:center;
    gap: 40px;
  }

  .kallos-offer__left{
    text-align:left;
  }

  .kallos-offer__badge,
  .kallos-offer__badge p{
    margin:0 0 10px 0;
    font-size: {{ section.settings.badge_size }}px;
    font-weight: 700;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: {{ section.settings.badge_color }};
  }

  .kallos-offer__left-title{
    font-size: {{ section.settings.left_title_size }}px;
    font-weight: 600;
    color: {{ section.settings.left_text_color }};
  }

  .kallos-offer__image{
    display:flex;
    justify-content:center;
    align-items:center;
  }

  .kallos-offer__image img{
    width: {{ section.settings.img_size_desktop }}px;
    height: auto;
    display:block;
  }

  .kallos-offer__right{
    text-align:center;
  }

  .kallos-offer__desc{
    font-size: {{ section.settings.desc_size_desktop }}px;
    line-height: 1.6;
    color: {{ section.settings.right_text_color }};
    margin-bottom: 18px;
  }
  .kallos-offer__desc p{ margin:0; }
  .kallos-offer__desc strong{ font-weight: 800; }

  .kallos-offer__btn{
    display:inline-block;
    min-width: 280px;
    text-align:center;
    background: #121212;
    color:#fff;
    padding: 14px 34px;
    border-radius: 6px;
    font-weight: 700;
    text-decoration:none;
    box-shadow: 0 10px 22px rgba(0,0,0,.18);
    transition: .25s ease;
  }
  .kallos-offer__btn:hover{
    transform: translateY(-2px);
    background: {{ section.settings.btn_hover }};
  }

  .kallos-offer__marquee{
    display:none;
    overflow:hidden;
    background: {{ section.settings.marquee_bg }};
    color: {{ section.settings.marquee_color }};
    padding: 10px 0;
  }

  .kallos-offer__marquee-track{
    display:flex;
    width: 200%;
    animation: kallosMarquee 18s linear infinite;
  }

  .kallos-offer__marquee-item{
    width:50%;
    display:flex;
    justify-content: space-around;
    font-weight: 800;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  @keyframes kallosMarquee{
    0%{ transform: translateX(0); }
    100%{ transform: translateX(-50%); }
  }

  /* Mobile */
  @media (max-width: 768px){
    #kallos-offer-{{ section.id }}{
      padding: {{ section.settings.pad_y_mobile }}px 20px;
    }

    .kallos-offer__marquee{
      display:block;
    }

    .kallos-offer__inner{
      grid-template-columns: 1fr;
      text-align:center;
      gap: 18px;
    }

    .kallos-offer__left{
      text-align:left;
    }

    .kallos-offer__image img{
      width: {{ section.settings.img_size_mobile }}px;
    }

    .kallos-offer__right{
      text-align:center;
    }

    .kallos-offer__btn{
      width: 100%;
      min-width: unset;
    }

    .kallos-offer__desc{
      font-size: {{ section.settings.desc_size_mobile }}px;
    }
  }
</style>

